{
  "manifest_version": 3,
  "name": "Slip Mate",
  "version": "2.0",
  "description": "Gere link de aposta compartilhavel na bet365 e betfair",
  "permissions": ["activeTab", "clipboardWrite", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
